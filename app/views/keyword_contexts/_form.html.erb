<%=form_for @context do |f|%>
<fieldset>
	<legend>Create new Context</legend>
	<p>
		<label>Name</label>
		<%=f.text_field :name%>
	</p>
	<p>
		<label>Weight</label>
		<%=f.select :weight, options_for_select(0..9,:selected=>@context.weight)%>
	</p>
	<p>
		<label>Relevant?</label>
		<%=f.check_box :is_relevant%>
	</p>
	<p>
		<%=f.submit "Save"%>
	</p>
</fieldset>
<%end%>